{
  "manifest_version": 3,
  "name": "NotebookLM Source Saver",
  "version": "0.1.0",
  "description": "Capture and export NotebookLM source lists from search history.",
  "permissions": ["storage"],
  "host_permissions": ["https://notebooklm.google.com/*"],
  "content_scripts": [
    {
      "matches": ["https://notebooklm.google.com/*"],
      "js": ["injector.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://notebooklm.google.com/*"],
      "js": ["parser.js", "content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "NotebookLM Source Saver",
    "default_popup": "popup.html"
  }
}
